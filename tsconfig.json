{
    "compilerOptions": {
        "incremental": true,
        "target": "ES6",
        "module": "ESNext",
        "declaration": true,
        "sourceMap": true,
        "composite": true,
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "allowJs": false,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "jsx": "preserve",
        "resolveJsonModule": true
    }
}